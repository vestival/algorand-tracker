generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String                        @id @default(cuid())
  name          String?
  email         String?                       @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  linkedWallets       LinkedWallet[]
  verificationRecords WalletVerificationChallenge[]
  snapshots           PortfolioSnapshot[]
  auditLogs           AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model LinkedWallet {
  id                  String   @id @default(cuid())
  userId              String
  address             String
  label               String?
  verifiedAt          DateTime?
  verificationMethod  String?
  verificationTxId    String?
  verificationMeta    Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, address])
}

model WalletVerificationChallenge {
  id          String   @id @default(cuid())
  userId      String
  walletId    String
  nonce       String
  noteText    String
  expiresAt   DateTime
  consumedAt  DateTime?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([walletId])
  @@index([userId, nonce])
}

model PortfolioSnapshot {
  id          String   @id @default(cuid())
  userId      String
  computedAt  DateTime @default(now())
  method      String   @default("FIFO")
  data        Json

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, computedAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  action     String
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
